
<h1>Common Message Board</h1>
{{#if ban}}
<h3>You Are Banned</h3>
{{else}}
<form action="/postMessage" method="post" enctype="application/x-www-form-urlencoded">
<label for="userName">Message:</label>
<input type="text" name="message" id="message" size="30" maxlength="40" />
<input type="submit" value="Post comment" />
</form>
{{/if}}

{{#if admin}}
<h1>Messages</h1>
{{#each messages}}
<div class="vacation">
<h3>{{poster}}</h3>
<p>{{messageContent}}</p>
<p>{{date}}</p>
<form action="/adminDeleteMessage" method="post" enctype="application/x-www-form-urlencoded">
<input type="hidden" name="content" id="content" value={{_id}}>
<input type="submit" value="Delete" />
</form>
{{/each}}

{{else}}
{{#each messages}}
<div class="vacation">
<h3>{{poster}}</h3>
<p>{{messageContent}}</p>
<p>{{date}}</p>
{{/each}}
{{/if}}

	