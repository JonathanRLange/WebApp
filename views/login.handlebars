<h1>Login</h1>
{{#if message}}
    {{message}}<br /><br />
{{/if}}

<form id="first" action="/" method="post" enctype="application/x-www-form-urlencoded">
<label for="userName">User Name:</label>
<input type="text" name="userName" id="userName" size="30" maxlength="40" />
<label for="password">Password:</label>
<input type="text" name="password" id="password" size="30" maxlength="40" />
<input type="submit" value="Submit me" />
</form>